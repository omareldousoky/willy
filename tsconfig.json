{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@Shared/*": ["../src/Shared/*"],
      "@Mohassel/*": ["../src/Mohassel/*"],
      "@CF/*": ["../src/CF/*"]
    }
  },
  "outDir": "./build/",
  "include": ["src"],
  "exclude": ["node_modules"]
}
